<div class="post-list">
{% for post in postslist %}
<article class="post">
  <h3 class="post-title">
    <a href="{{ post.url }}">
      {{ post.data.title }}
    </a>
  </h3>
  <div class="post-meta">{{ post.date | readableDate }}</div>
  	{% if post.data.image != '' %}
  	<a href="{{ post.url }}"><img src="{{ post.data.image }}" class="post-feature-img" alt="" title="{{ post.data.title }}" /></a>
    {% endif %}
    <p>{{ post.data.excerpt }} <a href="{{ post.url }}" class="read-more">{{ 'continue_reading' | i18n }}</a></p>
  <div class="clearfix"></div>
</article>
{% endfor %}
</div>
